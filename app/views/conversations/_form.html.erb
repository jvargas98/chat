<div class="mb-3">
  <%= form_with model: conversation do |form| %>
    <div class="field">
      <%= form.label :name, class: "form-label" %><br>
      <%= form.text_field :name, class: "form-control" %>
      <% conversation.errors.full_messages_for(:name).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="actions">
      <%= form.submit "#{title}", class: "btn btn-primary mt-3" %>
    </div>
  <% end %>
</div>
