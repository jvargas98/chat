<div class="container mt-5">
  <div class="d-flex flex-column">
    <h3>Conversations</h3>
    <div id="new-conversation">
      <%= link_to "New Conversation", new_conversation_path, remote: true, class: "btn bg-primary text-light" %>
    </div>
    <div class="d-flex flex-row align-items-stretch mt-3">
      <div class="col-4 p-0">
        <div class="list-group">
          <% @conversations.each do |conversation| %>
            <%= link_to conversation.name, conversation, remote: true, class: "list-group-item list-group-item-action" %>
          <% end %>
        </div>
      </div>
      <div class="col-8">
        <div id="messages">
        </div>
        <div id="chat" hidden>
          <%= react_component 'ChatEditor' %>
        </div>
      </div>
    </div>
  </div>
</div>
